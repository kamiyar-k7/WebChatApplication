@inject NavigationManager _navmanager;

<div class="modal" id="@modalid" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:gray;">
                <h5 class="modal-title">@headtext</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color:gray;">
                <p>@bodytext</p>
            </div>
            <div class="modal-footer" style="background-color:gray;">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="DirectClick" >Direct Now</button>

               
            </div>
        </div>
    </div>
</div>


@code
{
    [Inject] public IJSRuntime jSRuntime { get; set; }

    public  string modalid = Guid.NewGuid().ToString();

    [Parameter]
    public RenderFragment bodytext { get; set; }
    [Parameter]
    public RenderFragment headtext { get; set; }

    [Parameter]
    public string url { get; set; }

    public async Task OpenModal()
    {
        await jSRuntime.InvokeVoidAsync("OpenBootStrapModal", modalid);
    }    public async Task CloseModal()
    {
        await jSRuntime.InvokeVoidAsync("CloseBootStrapModal", modalid);
    }

    public void DirectClick()
    {
        _navmanager.NavigateTo(url);
    }

}